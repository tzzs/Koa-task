<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>layui</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link rel="stylesheet" href="/css/layui.css" media="all">
</head>

<body style="background-color: #F2F2F2;">
  <ul class="layui-nav  layui-bg-cyan">
    <li class="layui-nav-item">
      <a href="/">首页<span class=""></span></a>

    </li>
    <li class="layui-nav-item">
      <a href="/topic">Topic<span class=""></span></a>
    </li>
    <li class="layui-nav-item" lay-unselect="" style="float:right">
      <a href="javascript:;"><img src="//t.cn/RCzsdCq" class="layui-nav-img"><span id="username"></span></a>
      <dl class="layui-nav-child">
        <dd id="isLogin">
        </dd>
      </dl>
    </li>
  </ul>

  <div class="container">
    <div class="layui-row layui-col-space15 main" id="main">
    </div>
    <div id="page" style="text-align: center"></div>
  </div>
  <div class="footer">Powered By TZZ.</div>

  <script src="/layui.js" charset="utf-8"></script>
  <script src="/js/jquery-3.4.1.min.js"></script>
  <script>

    layui.use(['form', 'layedit', 'laydate', 'element', 'laypage'], function () {
      var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块
      var form = layui.form
        , layer = layui.layer
        , layedit = layui.layedit
        , laydate = layui.laydate
        , laypage = layui.laypage;
      //监听导航点击
      element.on('nav(demo)', function (elem) {
        //console.log(elem)
        layer.msg(elem.text());
      });
      //请求主题
      $.ajax({
        type: "get",
        url: "/gettopics",
        async: "true",
        dataType: "json",
        success: function (data) {
          if (data.code == 0) {
            var datacount = data.data.count;
            var topics = data.data.raw;

            //执行一个laypage实例
            laypage.render({
              elem: 'page',
              count: datacount,  //数据总数，从服务端得到
              layout: ['count', 'prev', 'page', 'next', 'skip'],
              jump: function (obj) {
                obj.limit = 20;
                console.log(obj.curr, obj.count, obj.limit);
                console.log((obj.curr - 1) * obj.limit, obj.limit * 20);
                $('#main').html("");
                for (let i = (obj.curr - 1) * obj.limit; i < obj.limit * obj.curr && i < obj.count; i++) {
                  // console.log(i);
                  let topic = topics[i];
                  let html = '\
                  <div class="layui-col-xs12 layui-col-sm6 layui-col-md3"><div class="layui-card">\
                      <div class="layui-card-header">'+ topic.title + '</div>\
                      <div class="layui-card-body"> '+ topic.content + '<br>Author:' + topic.author + '<br>Time:' + topic.logtime + '</div>\
                    </div>\
                  </div>';
                  $('#main').append(html);
                }
              }
            });
          } else {
            layer.alert(data.message);
          }
        },
        error: function () {
          layer.alert('请求时错误');
        }
      });

    });
    function logout() {
      $.ajax({
        type: 'get',
        url: '/logout',
        success: function (data) {
          window.location.href = '/index';
        },
        error: function () {

        }
      })
    }

    function islogin() {
      $.ajax({
        url: '/testlogin',
        type: 'get',
        success: function (data) {
          if (data.code == 0) {
            if (data.data.isLogin == true) {
              $('#username').text(data.data.username);
              $('#isLogin').html(`<a href="javascript:;" onclick="logout()">退出登陆</a>`);
            } else {
              $('#isLogin').html(`<a href="/login">登录</a>`);
              $('#isLogin').append(`<a href="/register">注册</a>`);
            }
          } else {
            layer.msg(data.message);
          }
        },
        error: function (error) {
          layer.msg(error);
        }
      });
    }

    window.onload = islogin;
  </script>

</body>
<style type="text/css">
  .container {
    padding: 50px 20px 0 20px;
    background-color: #F2F2F2;
  }

  #page {
    background-color: white;
    height: 50px;
    margin: 30px 0 0 0;
  }

  .footer {
    height: 20px;
    text-align: center;
    margin: 15px 0 0 0;
  }
</style>

</html>